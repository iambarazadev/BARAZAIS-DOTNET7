@page "/Staffs/New"
@*page "/Staffs/Edit/{Sn:int}"*@

@inject IDbContextFactory<BarazaContext> MyFactory
@inject NavigationManager Navigation
@inject IHttpContextAccessor Accessor
@inject UserManager<UserModel> UserManager

<div class="container py-3">
    <div class="row">
        <div class="col-12">
            <ul class="list-unstyled">
                <li>
                    <h2 class="UniqueText">BARAZA IS</h2>
                </li>
                <li>
                    <p class="UniqueText"><span class="bi-person-fill me-2"></span> User Registration </p>
                </li>
            </ul>
            <hr />
        </div>
        <div class="col-12">
            <EditForm Model="ThisUser" OnValidSubmit="SaveAsync" autocomplete="off">
                <div class="row">
                    <div class="col-12 pt-2">
                        <div class="text-danger"></div>
                    </div>
                    <div class="col-md-6 col-12 ">
                        <div class=" rounded-3 py-3">
                            <div class="form-floating rounded-3">
                                <input type="text" @bind="ThisUser.FirstName" class="form-control UniqueText border-0 bg-blue rounded " id="FirstName" placeholder="User name" />
                                <label for="FirstName" class="">
                                    <span class="bi-person me-2"></span> First Name
                                </label>
                                
                            </div>
                            <div class="form-floating mt-2 rounded-3">
                                <input type="text" @bind="ThisUser.LastName" class="form-control UniqueText border-0 bg-blue rounded " id="LastName" placeholder="User name" />
                                <label for="LastName" class="">
                                    <span class="bi-person me-2"></span> Last Name
                                </label>
                                
                            </div>
                            <div class="form-floating mt-2 rounded-3">
                                <input type="email" @bind="ThisUser.Email" class="form-control UniqueText border-0 bg-blue rounded " id="Email" placeholder="User name" />
                                <label for="Email" class="">
                                    <span class="bi-at me-2"></span> Email
                                </label>
                                
                            </div>
                            <div class="form-floating mt-2 rounded-3">
                                <input type="text" @bind="ThisUser.Phone" class="form-control UniqueText border-0 bg-blue rounded " id="PhoneNumber" placeholder="PhoneNumber" />
                                <label for="PhoneNumber" class="">
                                    <span class="bi-lock me-2"></span> Phone Number
                                </label>
                                
                            </div>
                            <div class="form-floating mt-2 rounded-3">
                                <input type="text" @bind="ThisUser.NIDA" class="form-control UniqueText border-0 bg-blue rounded " id="NIDA" placeholder="NIDA" />
                                <label for="NIDA" class="">
                                    <span class="bi-lock me-2"></span> NIDA
                                </label>
                                
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-12">
                        <div class=" rounded-3 py-3">
                            <div class="form-floating rounded-0 py-0">
                                <select @bind="ThisUser.AccessLevelId" @bind:event="onchange" required class="form-select text-capitalize border-0 bg-blue text-unique fw-bolder rounded " id="floatingSelect" aria-label="Floating label select example">
                                    <option>--:--</option>
                                    @{
                                        if(TheseAccessLevels != null && TheseAccessLevels.Count > 0)
                                        {
                                            foreach(var Access in TheseAccessLevels)
                                            {
                                                <option value=@Access.Id>@Access.Name</option>
                                            }
                                        }
                                    }
                                </select>
                                <label for="floatingSelect">Access Level</label>
                            </div>
                            <div class="form-floating mt-2 rounded-3">
                                <textarea @bind="ThisUser.Address" rows="3" class="form-control UniqueText border-0 bg-blue rounded h-50" id="Address" placeholder="Address"> </textarea>
                                <label for="Address" class="">
                                    <span class="bi-pin-map me-2"></span> Home Address
                                </label>
                                
                            </div>
                            <ul class="d-flex flex-row m-0 p-0 justify-content-between list-unstyled">
                                <li class="p-0 m-0">
                                    <button type="submit" class="btn btn-md btn-primary rounded mt-2 border-0">
                                        Register
                                    </button>
                                </li>
                            </ul>
                            <div class="py-4"></div>
                            <ul class=" m-0 p-0 list-unstyled d-flex flex-row justify-content-start border-top">
                                <li class="p-0 m-0 pt-3">
                                    <a class="text-muted btn btn-md border rounded" href="Login" style="width:fit-content">
                                        .. Already have an Account?, <span class="text-primary">Login</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Sn{ get; set; }

    private UserModel ThisUser = new();
    private List<AccessLevelModel> TheseAccessLevels = new();
    private CompanyModel ThisCompany = new();

    protected override async Task OnInitializedAsync()
    {
        base.OnInitializedAsync();

        using (var repo = new UnitOfWorkRepo(MyFactory.CreateDbContext()))
        {
            TheseAccessLevels = await repo.AccessLevels.GetAllDetailedAccessLevelAsync();
            await repo.CompleteAsync();
            repo.Dispose();
        }

    }

    private async Task SaveAsync()
    {
        
        using (var repo = new UnitOfWorkRepo(MyFactory.CreateDbContext()))
        {
            ThisUser.DateCreated = DateTime.Now;
            ThisUser.CompanyId = 1;
            await repo.CompleteAsync();
            repo.Dispose();
        }
    }
}