@page "/ListAllItems"

@inject IDbContextFactory<BarazaContext> MyFactory
@inject NavigationManager Navigation

<div class="row bg-white my-3 rounded shadow-sm">
    <div class="col-12 px-3 bg-xs rounded-top shadow-sm">
        <div class="row">
            <div class="col-1 py-3 text-center">
                <span class="bi-check"></span>
            </div>
            <div class="col-1 py-3 text-center">
                #
            </div>
            <div class="col-2 py-3">
                PID
            </div>
            <div class="col-4 py-3">
                ITEM
            </div>
            <div class="col-2 py-3">
                CATEGORY
            </div>
            <div class="col-2 py-3 text-center">
                STOCK
            </div>
        </div>
    </div>
    <div class="col-12 py-2 px-3">
        @{
            for(int i = 1; i <= 10; i++)
            {
                <div class="row bg-xss border-bottom" style="font-size:0.8rem !important">
                    <div class="col-1 py-3 text-center">
                        <input type="checkbox" value="true" />
                    </div>
                    <div class="col-1 py-3 text-center">
                        @i
                    </div>
                    <div class="col-2 py-3">
                        PID
                    </div>
                    <div class="col-4 py-3">
                        ITEM
                    </div>
                    <div class="col-2 py-3">
                        CATEGORY
                    </div>
                    <div class="col-2 py-3 text-center">
                        STOCK
                    </div>
                </div>
            }
        }
    </div>
</div>

