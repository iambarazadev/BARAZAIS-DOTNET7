@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container py-3">
    <div class="row">
        <div class="col-12">
            <h2>Login Local</h2>
            <hr />
        </div>
        <div class="col-12">
            <EditForm method="post">
                <div class="row">
                    <div class="col-12">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                    <div class="col-md-6 col-12 ">
                        <div class=" rounded-3 p-3">
                            <div class="form-floating mt-2 rounded-3">
                                <input type="email" asp-for="Input.Email" class="form-control border bg-xss text-unique fw-bolder rounded " id="floatingInput" placeholder="User name" />
                                <label for="floatingInput" class="text-unique">
                                    <span class="bi-person me-2"></span> Email
                                </label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mt-2 rounded-3">
                                <input type="password" asp-for="Input.Password" class="form-control border bg-xss text-unique fw-bolder rounded " id="floatingInput" placeholder="Password" />
                                <label for="floatingInput" class="text-unique">
                                    <span class="bi-lock me-2"></span> Password
                                </label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div>
                                <ul class="d-flex flex-row m-0 p-0 justify-content-between list-unstyled">
                                    <li class="p-0 m-0">
                                        <button class="btn btn-md btn-primary rounded mt-2 border-0">
                                            Log In
                                        </button>
                                    </li>
                                    <li class="p-0 m-0">
                                        <a class="text-muted btn btn-md mt-2 fst-italic" href="Register">New User, Register here.</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>

